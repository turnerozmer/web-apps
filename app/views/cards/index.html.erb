<%
numbers = [2,3,4,5,6,7,8,9,10,"jack","queen","king","ace"]
suits = ["diamonds", "hearts", "spades", "clubs"]

deck = []

for number in numbers
    for suit in suits
        deck.append("#{number}_of_#{suit}")
    end
end

deck.shuffle!

%>

<h1> Lets Play Cards! </h1>

<p> Here is your hand! </p>

<p>
<img src ="/images/cards/<%=deck[0]%>.svg">
<img src ="/images/cards/<%=deck[1]%>.svg">
<img src ="/images/cards/<%=deck[2]%>.svg">
<img src ="/images/cards/<%=deck[3]%>.svg">
<img src ="/images/cards/<%=deck[4]%>.svg">
</p>

<p>
    <a href = "/cards">Deal Again!</a>
</p>

